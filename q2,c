
#include <stdio.h>
#include <stdbool.h>

bool calculateFuel(int fuel, int consumption, int recharge, int solarBonus, int planet, int totalPlanets) {
    if (fuel <= 0) {
        printf("Planet %d: Fuel Remaining = 0 (Mission Failed)\n", planet - 1);
        return false;
    }
    
    if (planet > totalPlanets) {
        printf("All planets visited. Final fuel: %d\n", fuel);
        return true;
    }

    fuel =fuel - consumption;

    if (fuel < 0) {
        printf("Planet %d: Fuel Remaining = 0 (Mission Failed)\n", planet);
        return false;
    }

    printf("Planet %d: Fuel Remaining = %d\n", planet, fuel);

    fuel =fuel+ recharge;

    if (planet % 4 == 0) {
        fuel += solarBonus;
    }

    return calculateFuel(fuel, consumption, recharge, solarBonus, planet + 1, totalPlanets);
}

int main() {
    int initialFuel = 100;
    int fuelConsumptionPerPlanet = 10;
    int fuelRegeneration = 5;
    int solarEnergyBonus = 20;
    int totalPlanets = 10;

    calculateFuel(initialFuel, fuelConsumptionPerPlanet, fuelRegeneration, solarEnergyBonus, 1, totalPlanets);

    return 0;
}